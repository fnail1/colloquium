<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#546d79</item>
        <item name="android:textColor">#546d79</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@color/colorBackground</item>-->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/mw_fade_black_30</item>

    </style>

    <style name="AppThemeDark">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="LoginActivityTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>


    <style name="AnswersActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
    </style>

    <style name="Splash" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:minHeight">@dimen/action_bar_height</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorAccent">#ffffffff</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="ActionBar.Tabbed">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#ff000000</item>
        <item name="colorControlNormal">#ff000000</item>
        <item name="android:editTextColor">#ff000000</item>
        <item name="android:colorForeground">#ff000000</item>
        <item name="android:textColorHint">#33000000</item>
        <item name="android:colorPrimary">#ff000000</item>
        <item name="colorAccent">#ff000000</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ff546d79</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabSelectedTextColor">#ff546d79</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/colorTitle</item>
        <item name="android:colorAccent">@color/colorTitle</item>

    </style>

    <style name="MainActivityTabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorSubtitle</item>

    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ff9ab3c0</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.04</item>
    </style>


    <style name="TitleTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SubtitleTextAppearance">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DefaultButton" parent="SubtitleTextAppearance">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minHeight">37dp</item>
        <item name="android:minWidth">109dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">0px</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:background">@drawable/bg_white_button</item>
        <item name="android:foreground">@drawable/ripple_none_view_light</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>


    <style name="AccentButton" parent="DefaultButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_accent_button</item>
    </style>

    <style name="WhiteButtonTextAppearance" parent="SubtitleTextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
