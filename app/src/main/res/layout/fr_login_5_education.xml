<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="#03C383"
                tools:context=".ui.login.LoginActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:background="@drawable/ripple_circle_icon_dark"
        android:padding="@dimen/indent"
        android:src="@drawable/ic_back"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/indent"
            android:text="Где ты сейчас учишься?"
            android:textAppearance="@style/TitleTextAppearance"
            />

        <TextView
            android:id="@+id/secondary"
            style="@style/WhiteButton"
            android:layout_width="268dp"
            android:layout_height="58dp"
            android:layout_margin="@dimen/indent"
            android:drawablePadding="40dp"
            android:drawableStart="@drawable/ic_school"
            android:gravity="start|center_vertical"
            android:paddingStart="28dp"
            android:text="Школа"/>

        <TextView
            android:id="@+id/high"
            style="@style/WhiteButton"
            android:layout_width="268dp"
            android:layout_height="58dp"
            android:layout_margin="@dimen/indent"
            android:drawablePadding="40dp"
            android:drawableStart="@drawable/ic_institute"
            android:gravity="start|center_vertical"
            android:paddingStart="28dp"
            android:text="Универ"/>

    </LinearLayout>


</RelativeLayout>