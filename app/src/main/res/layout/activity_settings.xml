<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/icon"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/mw_fade_black_80"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:text="Настройки"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#9ab3c0"/>


    <Switch
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/ic_cellphone"
        android:drawablePadding="24dp"
        android:foreground="@drawable/ripple_rect_view_light"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Уведомления"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="#546d79"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_rect_view_light"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_exit"
        android:drawablePadding="14dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Выход"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="#546d79"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Версия: 1.1 (1)"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="#546d79"
        tools:ignore="RtlHardcoded"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#546d79"/>

    <Spinner
        android:id="@+id/api"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />

    <TextView
        android:id="@+id/import_db"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_rect_view_light"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Импорт БД"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="#546d79"
        tools:ignore="RtlHardcoded"/>


    <TextView
        android:id="@+id/copy_fcm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/ripple_rect_view_light"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Скопировать FCM-токен"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="#546d79"
        tools:ignore="RtlHardcoded"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rect_view_light"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="Количество вопросов за один подход"/>

        <EditText
            android:id="@+id/questions_frame_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:inputType="numberDecimal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rect_view_light"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:text="Пауза между подходами"/>

        <EditText
            android:id="@+id/questions_dead_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
</LinearLayout>