<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stopscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:theme="@style/AppThemeDark"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding"
        android:clipToPadding="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent"
            android:src="@drawable/ic_stopscreen"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent"
            android:gravity="center_horizontal"
            android:text="@string/title_stopscreen"
            android:textAppearance="@style/TitleTextAppearance"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="@dimen/indent"
            android:gravity="center_horizontal"
            android:text="@string/message_stopscreen"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/indent"
            android:fontFamily="sans-serif"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="00:50:34"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/indent"
            android:layout_marginTop="40dp"
            android:text="@string/message_skip_stopscreen"
            android:textAppearance="@style/SubtitleTextAppearance"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/contacts"
            style="@style/WhiteButton"
            android:layout_width="253dp"
            android:layout_height="58dp"
            android:layout_margin="@dimen/indent"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_invite"
            android:gravity="start|center_vertical"
            android:text="@string/button_invite"
            />
    </LinearLayout>
</FrameLayout>
