<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:background="@drawable/bg_main"
                tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="36dp"
            android:gravity="center_horizontal"
            android:text="@string/title_permission"
            android:textAppearance="@style/TitleTextAppearance"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/indent"
            android:gravity="center_horizontal"
            android:text="@string/subtitle_permission"
            android:textAppearance="@style/SubtitleTextAppearance"
            />

        <TextView
            android:id="@+id/contacts"
            style="@style/WhiteButton"
            android:layout_width="276dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:drawablePadding="@dimen/indent"
            android:drawableStart="@drawable/ic_address_book"
            android:elevation="16dp"
            android:text="@string/button_permission"
            />


    </LinearLayout>

</RelativeLayout>