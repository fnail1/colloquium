<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f8f8f8"
                android:fitsSystemWindows="true"
                android:theme="@style/AppThemeDark">

    <include
        android:id="@+id/page1"
        layout="@layout/fr_question"/>

    <include
        android:id="@+id/page2"
        layout="@layout/fr_question"/>

    <FrameLayout
        android:id="@+id/placeholders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00000f"
        android:visibility="gone"
        tools:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SubtitleTextAppearance"
                android:visibility="gone"
                tools:text="Похоже, ты неудачник и у тебя нет друзей"
                tools:visibility="visible"
                />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/stopscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#02C7A2"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indent"
                android:src="@drawable/ic_stopscreen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indent"
                android:gravity="center_horizontal"
                android:text="Воу!"
                android:textAppearance="@style/TitleTextAppearance"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/indent"
                android:layout_marginBottom="@dimen/indent"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                android:text="Новые вопросы будут доступны через:"
                android:textAppearance="@style/SubtitleTextAppearance"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/indent"
                android:fontFamily="sans-serif"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="00:50:34"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/indent"
                android:text="Хочешь быстрее?"
                android:textAppearance="@style/SubtitleTextAppearance"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/contacts"
                style="@style/WhiteButton"
                android:layout_width="253dp"
                android:layout_height="58dp"
                android:layout_margin="@dimen/indent"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_invite"
                android:gravity="start|center_vertical"
                android:text="Пригласить друга"
                />
        </LinearLayout>
    </FrameLayout>


</RelativeLayout>