<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingEnd="24dp"
    android:paddingStart="24dp"
    android:paddingTop="72dp"
    android:theme="@style/AppThemeDark"
    tools:background="#7030a0">


    <View
        android:id="@+id/anchor"
        android:layout_width="1dp"
        android:layout_height="1dp"

        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@id/variant1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/question_icon_size"
        android:layout_height="@dimen/question_icon_size"
        android:layout_marginBottom="@dimen/indent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/anchor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#7fff33ff"/>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TitleTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anchor"
        tools:text="The one that always stays cool under stress"
        />


    <FrameLayout
        android:id="@+id/variant1"
        style="@style/WhiteButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/variant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/variant1text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@style/WhiteButtonTextAppearance"
            android:textColor="#000000"
            tools:text="Имя Фамилия"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/variant2"
        style="@style/WhiteButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/variant3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/variant2text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@style/WhiteButtonTextAppearance"
            android:textColor="#000000"
            tools:text="Иннокентий Изольдович Кац"

            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/variant3"
        style="@style/WhiteButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/variant4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/variant3text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@style/WhiteButtonTextAppearance"
            android:textColor="#000000"
            tools:text="Ухтыждлинноеимякакое Ухтыждлиннаяфамилия"

            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/variant4"
        style="@style/WhiteButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/variant4text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="@style/WhiteButtonTextAppearance"
            android:textColor="#000000"
            tools:text="Ян"

            />

    </FrameLayout>


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:layout_marginBottom="12dp"
        android:layout_marginRight="@dimen/indent"


        android:background="@drawable/ripple_none_view_dark"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_fast_forward"
        android:gravity="center_horizontal"
        android:padding="@dimen/indent"
        android:text="Пропустить"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="@color/mw_fade_white_70"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="12dp"
        android:background="@drawable/ripple_none_view_dark"
        android:gravity="center_horizontal"

        android:padding="@dimen/indent"
        android:text="Нажми для продолжения"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="@color/textColorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</android.support.constraint.ConstraintLayout>