<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/answers"
        android:paddingTop="72dp"
        >

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            tools:ignore="UselessParent">

            <FrameLayout
                android:layout_width="@dimen/question_icon_size"
                android:layout_height="@dimen/question_icon_size"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/question_icon_size"
                    android:layout_height="@dimen/question_icon_size"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    tools:background="#7fff33ff"/>
                <!--android:contentDescription="ðŸ‘§"-->

            </FrameLayout>


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding"
                android:textAppearance="@style/TitleTextAppearance"
                android:gravity="center_horizontal"
                android:text="The one that always stays cool under stress"
                />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skip"
        android:layout_marginBottom="38dp"
        android:orientation="horizontal"
        android:paddingEnd="12dp"
        android:paddingStart="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            >

            <FrameLayout
                android:id="@+id/variant1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/indent"
                android:layout_marginBottom="@dimen/indent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_contact"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_none_view_light"
                android:padding="@dimen/indent"
                tools:targetApi="lollipop">

                <ru.mail.colloquium.ui.views.ContactNameView
                    android:id="@+id/variant1text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/indent"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/variant2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/indent"
                android:layout_marginBottom="@dimen/indent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_contact"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_none_view_light"
                android:padding="@dimen/indent"
                tools:targetApi="lollipop">

                <ru.mail.colloquium.ui.views.ContactNameView
                    android:id="@+id/variant2text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/indent"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/variant3"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/indent"
                android:layout_marginBottom="@dimen/indent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_contact"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_none_view_light"
                android:padding="@dimen/indent"
                tools:targetApi="lollipop">

                <ru.mail.colloquium.ui.views.ContactNameView
                    android:id="@+id/variant3text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/indent"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/variant4"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="@dimen/indent"
                android:layout_marginBottom="@dimen/indent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_contact"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="@drawable/ripple_none_view_light"
                android:padding="@dimen/indent"
                tools:targetApi="lollipop">

                <ru.mail.colloquium.ui.views.ContactNameView
                    android:id="@+id/variant4text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/indent"/>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/padding"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_fast_forward"
        android:gravity="center_horizontal"
        android:text="ÐŸÑ€Ð¾Ð¿ÑƒÑÑ‚Ð¸Ñ‚ÑŒ"
        android:textAppearance="@style/SubtitleTextAppearance"
        android:textColor="@color/mw_fade_white_70"
        />

</RelativeLayout>